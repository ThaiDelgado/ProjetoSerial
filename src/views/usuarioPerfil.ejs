                                <li>Drama</li>
                                <li>Minissérie</li>
                                <li>Comédia</li>
                                <li>Policial</li>
                                <li>Drama</li>
                                <li>Minissérie</li>
                                <li>Comédia</li>
                                <li>Policial</li>
                                <li>Drama</li>
                                <li>Minissérie</li>
                                <li>Minissérie</li>
                                <li>Comédia</li>
                                <li>Policial</li>
                                <li>Drama</li>
                                <li>Minissérie</li>
                                <li>Comédia</li>
                                <li>Policial</li>
                                <li>Drama</li>
                                <li>Minissérie</li>
                                <li>Comédia</li>
                                <li>Policial</li>
                                <li>Drama</li>
                                <li>Minissérie</li>
                            </ul>
                        </div>
                    </section>
                </div><!--container-->
            </section><!--timekeeper-->

            <section class="userTvShows">
                <div class="container">
                    <nav>
                        <ul>
                            <li class="select">Todas</li>
                            <li>Já Assistiu</li>
                            <li>Quero Ver</li>
                        </ul>
                    </nav>
                    <div class='userTvCastWrap'>
                        
                        <div class="userTvCast">
                            <%if(userProfile.castTvShows == null || userProfile.castTvShows.length == 0){%>
                                <p>Não há favoritos adicionado!</p>
                            <%}%>
                            <%userProfile.castTvShows.forEach(({},index)=> {%>
                                <div class="userCastTitle">
                                    <a href="<%=`/serie/${userProfile.castTvShows[index].id}`%>">
                                        <img src="<%=`https://image.tmdb.org/t/p/w500/${userProfile.castTvShows[index].poster_path}`%>" alt="">
                                        <h3><%=userProfile.castTvShows[index].original_name%></h3>
                                        <h4><%=userProfile.castTvShows[index].first_air_date.substring(0,4)%></h4>
                                    </a>
                                </div><!--userCastTitle-->
                            <%})%>
                        </div><!--userTvCast-->
                    </div>
                </div><!--container-->
            </section><!--userTvShows-->
        </main>

    </body>
</html>